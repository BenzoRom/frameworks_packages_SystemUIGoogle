soong_config_module_type_import {
    from: "frameworks/base/packages/SystemUI/Android.bp",
    module_types: ["systemui_optimized_java_defaults"],
}

android_library {
    name: "SystemUIGoogle-core",
    srcs: [
        "src/**/*.java",
        "src/**/*.kt",
        "src/**/I*.aidl",
    ],
    resource_dirs: [
        "res",
    ],
    static_libs: [
        "SystemUI-core",
        "SystemUIPluginLib",
        "SystemUISharedLib",
        "guava-android",
        "android.frameworks.stats-V1-java",
        "android.hidl.base-V1.0-java",
        "//hardware/google/interfaces:com.google.hardware.pixel.display-V6-java",
        "autorotate-proto",
        "pixelatoms-google-java",
        "smartspace-proto",
        "tensorflowlite_java",
        "SystemUIGoogleLib",
    ],
    aaptflags: [
        "--extra-packages",
        "com.android.systemui",
    ],
    manifest: "AndroidManifest.xml",

    kotlincflags: ["-Xjvm-default=enable"],

    plugins: ["dagger2-compiler"],
}

systemui_optimized_java_defaults {
    name: "SystemUIGoogle_app_defaults",
    soong_config_variables: {
        SYSTEMUI_OPTIMIZE_JAVA: {
            optimize: {
                enabled: true,
                optimize: true,
                shrink: true,
                proguard_compatibility: false,
                proguard_flags_files: ["systemui-google.pro"],
            },
            conditions_default: {
                optimize: {
                    proguard_flags_files: ["systemui-google.pro"],
                },
            },
        },
    },
}

android_app {
    name: "SystemUIGoogle",
    defaults: [
        "platform_app_defaults",
        "SystemUIGoogle_app_defaults",
    ],
    static_libs: [
        "SystemUIGoogle-core"
    ],
    overrides: [
        "SystemUI",
    ],
    resource_dirs: [],
    asset_dirs: ["assets"],
    aaptflags: [
        "-0 .tflite",
        "-0 .vocab",
    ],

    jni_libs: ["libtensorflowlite_jni"],
    use_embedded_native_libs: true,

    platform_apis: true,
    system_ext_specific: true,
    certificate: "platform",
    privileged: true,

    kotlincflags: ["-Xjvm-default=enable"],

    dxflags: ["--multi-dex"],
    required: [
        "privapp_whitelist_com.google.android.systemui",
    ],
}

prebuilt_etc {
    name: "privapp_whitelist_com.google.android.systemui",
    sub_dir: "permissions",
    src: "com.google.android.systemui.xml",
    filename_from_src: true,
    system_ext_specific: true,
}
